@using BoardBrawl.WebApp.MVC.Areas.Game.Models;
@model PlayerInfo


<style>
    .transparent-card {
        background: rgba(0, 0, 0, 0.5) !important; /* Black with 50% opacity */
    }

    .btn-player-settings {
        background-color: rgba(75, 75, 75, 0.5);
        border-radius: 5px;
        padding: 8px;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-player-counter {
        margin-top: -5px;
    }

    ::-webkit-input-placeholder {
        font-size: 25px;
    }

    :-moz-placeholder { /* Firefox 18- */
        font-size: 25px;
    }

    ::-moz-placeholder { /* Firefox 19+ */
        font-size: 25px;
    }

    /* Overriding styles */

    ::-webkit-input-placeholder {
        font-size: 13px !important;
    }

    :-moz-placeholder { /* Firefox 18- */
        font-size: 13px !important;
    }

    ::-moz-placeholder { /* Firefox 19+ */
        font-size: 13px !important;
    }

/   .commander-search-input {
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }

/*    input::placeholder {
        padding-left: 10px;
    }*/
    .dropdown-menu-extended {
        max-height: 500px; /* Or any other value */
        overflow-y: auto;
    }

    .custom-dropdown {
        width: 315px; /* Or any other value */
    }

    .no-arrow::after {
        display: none;
    }

    .damage-type-header {
        margin-left: 10px;
    }

    .text-with-popup {
        position: relative;
        display: inline-block;
    }

    .text-with-popup img {
        display: none;
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        width: 325px;
        z-index:1000;
    }

    .text-with-popup:hover img {
