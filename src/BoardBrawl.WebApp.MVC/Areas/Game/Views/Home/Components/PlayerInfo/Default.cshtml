@using BoardBrawl.WebApp.MVC.Areas.Game.Models;
@model PlayerInfo


@*@Model.PlayerName <button data-userid="@Model.UserId" class="btnDecreaseLife">-</button>@Model.LifeTotal<button data-userid="@Model.UserId" class="btnIncreaseLife">+</button>*@
<style>
    .transparent-card {
        background: rgba(0, 0, 0, 0.5) !important; /* Black with 50% opacity */
    }

    .btn-player-settings {
        background-color: rgba(75, 75, 75, 0.5);
        border-radius: 5px;
        padding: 8px;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-player-lifetotal {
        margin-top: -5px;
    }

    ::-webkit-input-placeholder {
        font-size: 25px;
    }

    :-moz-placeholder { /* Firefox 18- */
        font-size: 25px;
    }

    ::-moz-placeholder { /* Firefox 19+ */
        font-size: 25px;
    }

    /* Overriding styles */

    ::-webkit-input-placeholder {
        font-size: 13px !important;
    }

    :-moz-placeholder { /* Firefox 18- */
        font-size: 13px !important;
    }

    ::-moz-placeholder { /* Firefox 19+ */
        font-size: 13px !important;
    }

/*    .commander-search-input {
        padding: 0px 0px 0px 0px;
    }

    input::placeholder {
        padding-left: 10px;
    }*/
</style>
<div class="card bg-transparent border-0">
    <div class="card-body text-white bg-dark" style="padding-top: 5px;">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div>
                    <button data-userid="@Model.UserId" class="shadow-none text-white btn btn-transparent btn-sm btnDecreaseLife btn-player-lifetotal">-</button>
                    @Model.LifeTotal
                    <button data-userid="@Model.UserId" class="shadow-none btn text-white btn-transparent btn-sm btnIncreaseLife btn-player-lifetotal">+</button>
                </div>
                <div class="ml-2" style="font-size: 12px;">
                    <div>@Model.PlayerName</div>
                    <div>commander name</div>
                </div>
            </div>
            <button class="btn shadow-none text-white p-0" type="button" data-bs-toggle="collapse" data-bs-target="#settingsCollapse" aria-expanded="false" aria-controls="settingsCollapse">
                ...
            </button>
        </div>
        <div class="collapse bg-transparent text-white pt-1" id="settingsCollapse">
            <div class="card bg-dark border-0">
                <div class="card-body" style="font-size: 12px; padding-top: 5px;">
                    @*<h6 class="text-white mb-2">Player ID: @Model.UserId</h6>*@

                    <div class="row pt-2 pb-2 bg-light">
                        <div class="col-md-6">
                            <input type="text" class="form-control input-sm commander-search-input placeholder-xs" placeholder="Add Commander">
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control input-sm commander-search-input placeholder-xs" placeholder="Add Commander">
                        </div>
                    </div>
                    <div class="row align-items-center pt-1">
                        <div class="col-7">Commander Damage:</div>
                        <div class="col-5">
                            <button data-userid="@Model.UserId" class="shadow-none text-white btn btn-transparent btn-sm btnDecreaseCommanderDamage btn-player-lifetotal">-</button>
                            @Model.CommanderDamage
                            <button data-userid="@Model.UserId" class="shadow-none text-white btn btn-transparent btn-sm btnIncreaseCommanderDamage btn-player-lifetotal">+</button>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-7">Infect Damage:</div>
                        <div class="col-5">
                            <button data-userid="@Model.UserId" class="shadow-none text-white btn btn-transparent btn-sm btnDecreaseInfectDamage btn-player-lifetotal">-</button>
                            @Model.InfectDamage
                            <button data-userid="@Model.UserId" class="shadow-none text-white btn btn-transparent btn-sm btnIncreaseInfectDamage btn-player-lifetotal">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











