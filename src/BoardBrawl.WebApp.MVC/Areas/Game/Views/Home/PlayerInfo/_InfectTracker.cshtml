@using BoardBrawl.WebApp.MVC.Areas.Game.Models
@model PlayerInfo

<div class="card">
    <div class="card-header infectTracker">
        <h6>Misc</h6>
        <div class="d-flex justify-content-between">
            <div class="pt-2">
                <small>Infect</small>
            </div>

            <div class="d-flex">
                <div class="btn btn-sm btnAdjustInfectCount" data-player-id="@Model.Id" data-amount="-1">
                    <i class="bi bi-file-minus" style="font-size: 1.5rem;@(!Model.IsSelf ? "visibility:hidden" : "")"></i>
                </div>

                <div class="pt-2" style="min-width:20px; text-align:center">
                    <span class="infectCount" data-player-id="@Model.Id">@Model.InfectCount</span>
                </div>

                <div class="btn btn-sm btnAdjustInfectCount" data-player-id="@Model.Id" data-amount="1">
                    <i class="bi bi-file-plus" style="font-size: 1.5rem;@(!Model.IsSelf ? "visibility:hidden" : "")"></i>
                </div>
            </div>
        </div>

        <div class="progress">
            <div class="progress-bar" style="width:@Model.InfectPercentage%" data-value="@Model.InfectCount" role="progressbar" aria-valuenow="@Model.InfectCount" aria-valuemin="0" aria-valuemax="10"></div>
        </div>
    </div>
</div>