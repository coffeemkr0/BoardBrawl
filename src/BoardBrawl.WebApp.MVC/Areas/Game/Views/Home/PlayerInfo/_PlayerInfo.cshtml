        //        position: false, left: false, top: false
        //    }).detach());
        //});

        //Don't close the player info drop down when the user clicks on it
        $("#playerInfoDropdownContent").on("click", function (event) {
            event.stopPropagation();
        });

        function PlayerInfo_CommanderChanged(slot, cardId) {
            //Update state when user selects a commander
            $.ajax({
                url: '/Game/Home/UpdateCommander',
                data: {
                    gameId: '@(Model.GameId)',
                    slot: slot,
                    cardId: cardId
                },
                success: function (html) {
                    var commanderInfoContainer = $('#commanderInfo@(Model.Id)');
                    commanderInfoContainer.html(html);
                }
            });
        }
    }
</script>