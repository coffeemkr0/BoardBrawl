@using BoardBrawl.WebApp.MVC.Areas.Game.Models;
@model PlayerInfo


<style>
    .btn-player-counter {
        margin-top: -5px;
    }

    .no-arrow::after {
        display: none;
    }

    .damage-type-header {
        margin-left: 10px;
    }
</style>
<div class="card bg-transparent border-0">
    <div class="card-body text-white bg-dark" style="padding-top: 5px;">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="playerLifeTotal" data-player-id="@Model.Id">
                    @await Html.PartialAsync("PlayerInfo/_PlayerLifeTotal", Model)
                </div>
                <div class="ml-2" style="font-size: 12px;">
                    <div>
                        <span>@Model.PlayerName</span>
                    </div>

                    <div>
                        <div class="dropdown playerInfoDropdown">
                            <div id="commanderInfo@(Model.Id)" class="dropdown-toggle no-arrow shadow-none fst-italic" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @await Html.PartialAsync("PlayerInfo/_CommanderInfo", Model)
                            </div>

                            <div class="dropdown-menu py-0 keepopen" style="width:500px" aria-labelledby="commanderInfo@(Model.Id)">
                                @await Html.PartialAsync("PlayerInfo/_PlayerInfoDropdown", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @*<div class="dropdown">
                <button class="btn shadow-none text-white p-0 no-arrow dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    ...
                </button>
                <div class="dropdown-menu dropdown-menu-right bg-dark text-white" aria-labelledby="dropdownMenuButton1">
                    <div class="card-body" style="font-size: 12px; padding-top: 5px;">
                    </div>
                </div>
            </div>*@
        </div>
    </div>
</div>