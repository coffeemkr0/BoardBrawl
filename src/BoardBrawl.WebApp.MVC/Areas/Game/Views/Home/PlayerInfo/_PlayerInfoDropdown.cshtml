@using BoardBrawl.WebApp.MVC.Areas.Game.Models;
@model PlayerInfo;

<style>
    #infectSlider .ui-slider-handle {
        display: none;
    }
</style>

<div class="card">
    <div class="card-header">
        <h5>@Model.PlayerName</h5>
    </div>

    <div class="card-body py-2">
        <div class="pb-2">
            <small class="fst-italic text-muted">Commander(s)</small>
        </div>
        <div class="row text-xs commander-inputs" data-player-id="@Model.Id">
            <div class="col px-2">
                @if(Model.IsSelf)
                {
                    <input class="form-control commander-search text-xs" placeholder="Add Commander" value="@Model.Commander1?.Name">
                    <input class="commander-id" type="hidden" data-slot="1" value="@Model.Commander1Id">
                }
                else
                {
                    <input readonly class="form-control text-xs" value="@Model.Commander1?.Name">
                }
            </div>
            <div class="col px-2">
                @if(Model.IsSelf)
                {
                    <input class="form-control commander-search text-xs" data-input-for="Commander2" placeholder="Add Commander" value="@Model.Commander2?.Name">
                    <input class="commander-id" type="hidden" data-slot="2" value="@Model.Commander2Id">
                }
                else
                {
                    <input readonly class="form-control text-xs" value="@Model.Commander2?.Name">
                }
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="pb-2">
            <small class="fst-italic text-muted">Damage totals</small>
        </div>

        <div>
            @*TODO: Insert commander damage here*@
        </div>

        <div>
            <div class="card">
                <div class="card-header infectTracker">
                    <h6>Misc</h6>
                    <div class="d-flex justify-content-between">
                        <div class="pt-2">
                            <small>Infect</small>
                        </div>
                        
                        <div class="d-flex">
                            <div class="btn btn-sm adjustInfectCount" data-player-id="@Model.Id" data-amount="-1">
                                <i class="bi bi-file-minus" style="font-size: 1.5rem;"></i>
                            </div>

                            <div class="pt-2">
                                <span class="infectCount">@Model.InfectCount</span>
                            </div>

                            <div class="btn btn-sm adjustInfectCount" data-player-id="@Model.Id" data-amount="1">
                                <i class="bi bi-file-plus" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>

                     <div class="progress pe-1">
                        <div class="progress-bar" style="width:@Model.InfectPercentage%" data-value="@Model.InfectCount" role="progressbar" aria-valuenow="@Model.InfectCount" aria-valuemin="0" aria-valuemax="10"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>