
<div id="createGameModal" class="modal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <form action="/Lobby/Home/CreateGame" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Game</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="gameName">Name:</label>
                        <input type="text" class="form-control" id="gameName" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="gameDescription">Description:</label>
                        <textarea class="form-control" id="gameDescription" name="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="isPublic">Public:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isPublic" name="IsPublic" value="true">
                            <label class="form-check-label" for="isPublic">Yes</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>