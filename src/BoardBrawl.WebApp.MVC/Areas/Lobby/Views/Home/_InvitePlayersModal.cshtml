<div id="invitePlayersModal" class="modal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Invite Players</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Use the following URL to invite players:</p>
                <div class="input-group">
                    <input type="text" id="invitationUrl" readonly class="form-control">
                    <button type="button" class="btn btn-primary" id="btnCopyInvitationUrl">
                        <i class="bi bi-clipboard"></i>
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>